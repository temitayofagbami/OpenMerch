@{

    ViewData["Title"] = " ProductDetails";

    @model WebMvc.ViewModels.ProductDetailViewModel

}




<body>
    <div class="container">
        <div class="row equal">
            <div class="col-sm-7 ">

                <img class="esh-catalog-thumbnail" src="@Model.PictureUrl" alt="Product  Image">
            </div>
            <div class="col-sm-4 bg-light">

                <div class="padding">
                    <H2>@Model.Name</H2>
                </div>

                <div class="padding grayText">
                    <br />
                    <span>$@Model.Price.ToString("N2")</span>
                </div>
                <div class="padding">
                    <span>@Model.Description</span>
                </div>
            </div>
        </div>
    </div>
    <div>
        <div class="row top-buffer">
            <div class="col-sm-7 padding">

                <!--Share and save options-->


            </div>
            <div class="col-sm-4">
                <form>
                    <input class="register-button" type="submit" value="ADD TO CART" />
                </form>
                <!--register button-->

            </div>
        </div>
    </div>
    <hr>
    <div>
        <div class="row top-buffer">
            <div class="col-sm-7">

                <h3>Description</h3>
                <p>@Model.Description</p><!--Description of event-->

                <h3>Share With Friends!</h3>
                <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-show-count="false">Tweet</a>
                <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>


            </div>
           
        </div>
    </div>
    <hr>
    <div class="centered-text top-buffer">
        <a id="organizer"><h3>Supplier Information</h3></a>
        <p>put supplier info here</p>
        <p></p>

        <!--MAP-->

    </div>
</body>



