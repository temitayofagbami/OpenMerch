@model WebMvc.Models.CatalogItem

<form asp-controller="ProductDetail" asp-action="ProductDetail">

    <input class="esh-catalog-thumbnail" type="image" name="clickproductdetails" src="@Model.PictureUrl" border="0" alt="ProductImage" />
    

    <input type="hidden" asp-for="@Model.Id" name="id" />

</form>

<form asp-controller="Cart" asp-action="AddToCart">

    <input class="esh-event-button" type="submit" value="[ ADD TO CART ]" />

    <div class="esh-catalog-name">
        <a href="@Url.Action("Index", "ProductDetail", new { id = @Model.Id })" class="esh-catalog-name"><span>@Model.Name</span></a>
    </div>

  


    @if (Model.Price == 0)
    {
        <span class="esh-catalog-price-free">FREE</span>
    }
    else
    {

        <span class="esh-catalog-price">@Model.Price.ToString("N2")</span>

    }

    <input type="hidden" asp-for="@Model.CatalogBrand" name="brand" />
    <input type="hidden" asp-for="@Model.CatalogBrandId" name="brandId" />
    <input type="hidden" asp-for="@Model.CatalogType" name="type" />
    <input type="hidden" asp-for="@Model.CatalogTypeId" name="typeId" />
    <input type="hidden" asp-for="@Model.Description" name="description" />
    <input type="hidden" asp-for="@Model.Id" name="id" />
    <input type="hidden" asp-for="@Model.Name" name="name" />
    <input type="hidden" asp-for="@Model.PictureUrl" name="pictureUrl" />
    <input type="hidden" asp-for="@Model.Price" name="price" />

</form>